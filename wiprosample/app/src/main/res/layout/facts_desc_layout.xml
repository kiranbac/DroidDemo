<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fact_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/heading_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/expand_feed_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/fact_title_text_view"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_expand_feed" />

    <ImageView
        android:id="@+id/fact_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/fact_title_text_view"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/expand_feed_image" />

    <TextView
        android:id="@+id/fact_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fact_title_text_view"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/fact_image"
        android:ellipsize="end"
        android:maxLines="3" />


</RelativeLayout>